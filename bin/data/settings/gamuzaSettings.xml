<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- GAmuza v.03 settings ----------------------->
<!-- EDIT ONLY IF YOU KNOW WHAT ARE YOU DOING! -->
<!----------------------------------------------->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!---------------------------------------------------- MODULES ---------------------------------------------------->
<!-- 0 = NO | 1 = YES -->
<openni_activated>0</openni_activated>
<!-- activate OpenNI SensorKinect module  -->
<tracking_activated>0</tracking_activated>
<!-- activate video tracking module       -->
<audio_activated>1</audio_activated>
<!-- activate audio input analysis module -->
<arduino_activated>0</arduino_activated>
<!-- activate arduino comunication module -->
<osc_activated>0</osc_activated>
<!-- activate osc data server module	  -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!---------------------------------------------------- SCREENS ---------------------------------------------------->
<ms_width>1366</ms_width>
<!-- main screen (primary) width MIN : 1366 -->
<ms_height>768</ms_height>
<!-- main screen (primary) height MIN : 768 -->
<ps_width>1920</ps_width>
<!-- projection screen (secondary) width -->
<ps_height>1080</ps_height>
<!-- projection screen (secondary) height -->
<fps>60</fps>
<!-- FPS -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!--------------------------------------------------- AUTOMATION -------------------------------------------------->
<auto_pilot>0</auto_pilot>
<!-- render second screen only (installation mode) -->
<autoload_script>0</autoload_script>
<!-- auto load a script when start gamuza -->
<script_file>scripts/loadingImage.lua</script_file>
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!----------------------------------------------- OUTPUT FBO TEXTURE ---------------------------------------------->
<fbo_num_samples>1</fbo_num_samples>
<!-- FBO texture num.samples (MIN 0, MAX look checkGLSupport)-->
<use_video_file>0</use_video_file>
<!-- load a video instead of live coding -->
<fbo_video_file>videos/video.mov</fbo_video_file>
<!-- output video file -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!---------------------------------------------------- MAPPING ---------------------------------------------------->
<grid_res>8</grid_res>
<!-- warping grid definition | MAX 20, MIN 1 -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!--------------------------------------------- SENSOR KINECT TRACKING -------------------------------------------->
<use_infrared>0</use_infrared>
<!-- use normal vision (0) or InfraRed vision (1) -->
<led_state>0</led_state>
<!-- set led state 0=off, 1=green, 2=red, 3=yellow,
																			   4=blink green, 6=blink red/yellow -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!------------------------------------------------- WEBCAM TRACKING ----------------------------------------------->
<!-- ---------------------------------------------------------------------------     -->
<!-- BE SURE THIS RESOLUTION IS SUPPORTED BY ALL YOUR CAMERA(s) or GAMUZA will CRASH -->
<!--   BE SURE YOUR MACHINE IS FAST ENOUGH TO SET HIGHER RESOLUTION THAN 320x240     -->
<!-- ---------------------------------------------------------------------------     -->
<capture_width>320</capture_width>
<capture_height>240</capture_height>
<!-- ---------------------------------------------------------------------------	 -->
<video_test>0</video_test>
<!-- load a test video instead of webcams -->
<haar_finder_file>settings/haarXML/haarcascade_frontalface_alt.xml</haar_finder_file>
<!-- haar finder file -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!------------------------------------------------------ AUDIO ---------------------------------------------------->
<audio_Dev_ID>0</audio_Dev_ID>
<!-- audio device ID -->
<output_ch>0</output_ch>
<!-- output channel number -->
<input_ch>2</input_ch>
<!-- input channel number -->
<sampling_rate>44100</sampling_rate>
<!-- 22050, 44100, 48000, 96000, 192000 -->
<buffer_size>512</buffer_size>
<!-- 32, 64, 128, 256, 512, 1024, 2048, 4096 -->
<num_buffers>4</num_buffers>
<!-- buffers number -->
<fft_window>3</fft_window>
<!-- 0=RECTANGULAR, 1=BARTLETT, 2=HANN, 3=HAMMING, 4=SINE -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!----------------------------------------------------- ARDUINO --------------------------------------------------->
<serial_device_name>/dev/ttyS0</serial_device_name>
<baud_rate>57600</baud_rate>
<!-- 57600 or 115200 -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!-- -------------------------------------------------------------------------------------------------------     -->
<!------------------------------------------------------- OSC ----------------------------------------------------->
<host_ip>127.0.0.1</host_ip>
<!-- sending to host with IP -->
<host_port>6699</host_port>
<!-- at this port -->
